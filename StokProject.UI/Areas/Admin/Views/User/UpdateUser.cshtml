@using StokProject.Entities.Enums;
@model User

@{
    ViewData["Title"] = "UpdateUser";
}

<h1>UpdateUser</h1>

<hr />

<div class="col-lg-6 offset-3">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Kullanıcı Güncelle</strong>
        </div>
        <div class="card-body">
            <!-- Credit Card -->
            <div id="pay-invoice">
                <div class="card-body">
                    @if (ViewBag.Message != null)
                    {
                        <div class="sufee-alert alert with-close alert-danger alert-dismissible fade show">
                            <span class="badge badge-pill badge-danger">Hata!</span>
                            <br />
                            @ViewBag.Message
                            You successfully read this important alert.
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <form asp-action="UpdateUser" enctype="multipart/form-data" method="post" novalidate="novalidate">

                        <div class="form-group">
                            <label asp-for="FirstName" class="control-label mb-1">Kullanıcı Adı</label>
                            <input asp-for="FirstName" type="text" class="form-control" aria-required="true" aria-invalid="false" value="Kullanıcı adı">
                        </div>
                        <div class="form-group has-success">
                            <label asp-for="LastName" class="control-label mb-1">Kullanıcı Soyadı</label>
                            <input asp-for="LastName" type="text" class="form-control cc-name valid" data-val="true" data-val-required="Açıklama girmek zorunlu" autocomplete="cc-name" aria-required="true" aria-invalid="false" aria-describedby="cc-name">
                            <span class="help-block field-validation-valid" data-valmsg-for="cc-name" data-valmsg-replace="true"></span>
                        </div>
                        <div class="form-group has-success">
                            <label asp-for="Email" class="control-label mb-1">Email</label>
                            <input asp-for="Email" type="text" class="form-control cc-name valid" data-val="true" data-val-required="Açıklama girmek zorunlu" autocomplete="cc-name" aria-required="true" aria-invalid="false" aria-describedby="cc-name">
                            <span class="help-block field-validation-valid" data-valmsg-for="cc-name" data-valmsg-replace="true"></span>
                        </div>
                        <div class="form-group has-success">
                            <label asp-for="Phone" class="control-label mb-1">Telefon</label>
                            <input asp-for="Phone" type="text" class="form-control cc-name valid" data-val="true" data-val-required="Açıklama girmek zorunlu" autocomplete="cc-name" aria-required="true" aria-invalid="false" aria-describedby="cc-name">
                            <span class="help-block field-validation-valid" data-valmsg-for="cc-name" data-valmsg-replace="true"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address" class="control-label mb-1">Adres</label>
                            <textarea asp-for="Address" type="text" class="form-control" aria-required="true" aria-invalid="false" value="Kullanıcı adı"></textarea>
                        </div>

                        <div class="form-group">
                            <label asp-for="Role" class="control-label">Kullanıcı Rol</label>
                            <select asp-for="Role" asp-items="@Html.GetEnumSelectList(typeof(UserRole))" class="form-control">
                                <option value="">Rol Türü Seçiniz</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="PhotoURL" class="control-label">File input</label>
                            <input asp-for="PhotoURL" type="file" name="files" class="form-control-file">
                        </div>


                        <div>
                            <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                <i class="fa fa-lock fa-lg"></i>&nbsp;
                                <span id="payment-button-amount">Kullanıcı Güncelle</span>
                                <span id="payment-button-sending" style="display:none;">Güncelleniyor…</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div> <!-- .card -->

</div>
