@using StokProject.Entities.Entities;
@model IEnumerable<StokProject.Entities.Entities.User>

<!-- /# column -->
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <div class="align-items-lg-end d-flex justify-content-between">
                <strong class="card-title">Kullanıcı Listesi</strong>
                <a class="btn btn-success ms-4" asp-controller="User" asp-action="AddUser">Kullanıcı Ekle</a>
            </div>
        </div>
        <div class="card-body">
            <div class="custom-tab">
                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link active" id="custom-nav-home-tab" data-toggle="tab" href="#custom-nav-home" role="tab" aria-controls="custom-nav-home" aria-selected="true">Aktif Kullanıcılar</a>
                        <a class="nav-item nav-link" id="custom-nav-profile-tab" data-toggle="tab" href="#custom-nav-profile" role="tab" aria-controls="custom-nav-profile" aria-selected="false">Tüm Kullanıcılar</a>
                    </div>
                </nav>
                <div class="tab-content pl-3 pt-2" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="custom-nav-home" role="tabpanel" aria-labelledby="custom-nav-home-tab">
                        <div class="card">
                            <div class="card-header">
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Ad Soyad</th>
                                            <th scope="col">Adres</th>
                                            <th scope="col">Telefon</th>
                                            <th scope="col">Mail</th>
                                            <th scope="col">Rol</th>
                                            <th scope="col">Durum</th>
                                            <th scope="col">İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int rowCount = 1;
                                        }
                                        @foreach (User item in Model)
                                        {
                                            if (item.IsActive)
                                            {
                                                <tr>
                                                    <th scope="row">@rowCount</th>
                                                    <td>@item.FirstName @item.LastName</td>
                                                    <td>@item.Address</td>
                                                    <td>@item.Phone</td>
                                                    <td>@item.Email</td>
                                                    <td>@item.Role</td>
                                                    <td class="bg-success text-white"><span>Aktif</span></td>
                                                    <td>
                                                        <a asp-area="Admin" asp-controller="User" asp-action="UpdateUser" asp-route-id="@item.ID" class="btn btn-sm btn-warning">Güncelle</a>

                                                        <a asp-area="Admin" asp-controller="User" asp-action="DeleteUser" asp-route-id="@item.ID" class="btn btn-sm btn-danger">Sil</a>
                                                    </td>
                                                </tr>
                                            }

                                            rowCount++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="custom-nav-profile" role="tabpanel" aria-labelledby="custom-nav-profile-tab">
                        <div class="card">
                            <div class="card-header">
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Ad Soyad</th>
                                            <th scope="col">Adres</th>
                                            <th scope="col">Telefon</th>
                                            <th scope="col">Mail</th>
                                            <th scope="col">Rol</th>
                                            <th scope="col">Durum</th>
                                            <th scope="col">İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int rowCount2 = 1;
                                        }
                                        @foreach (User item in Model)
                                        {
                                                <tr>
                                                    <th scope="row">@rowCount2</th>
                                                    <td>@item.FirstName @item.LastName</td>
                                                    <td>@item.Address</td>
                                                    <td>@item.Phone</td>
                                                    <td>@item.Email</td>
                                                    <td>@item.Role</td>

                                                    @if (item.IsActive)
                                                    {
                                                        <td class="bg-success text-white">
                                                            <span>Aktif</span>
                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td class="bg-danger text-white">
                                                            <span>Pasif</span>
                                                        </td>
                                                    }

                                                    <td>
                                                        <a asp-area="Admin" asp-controller="User" asp- action="UpdateUser" asp-route-id="@item.ID" class="btn btn-sm btn-warning">Güncelle</a>
                                                        @if (item.IsActive)
                                                        {
                                                            <a asp-area="Admin" asp-controller="User" asp-action="DeleteUser" asp-route-id="@item.ID" class="btn btn-sm btn-danger">Sil</a>
                                                        }
                                                        else
                                                        {
                                                        <a asp-area="Admin" asp-controller="User" asp-action="ActivateUser" asp-route-id="@item.ID" class="btn btn-sm btn-primary">Aktif Et</a>
                                                        }

                                                    </td>
                                                </tr>
                                                rowCount2++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /# column -->