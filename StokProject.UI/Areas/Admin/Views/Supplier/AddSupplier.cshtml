@model Supplier

@{
    ViewData["Title"] = "AddSupplier";
}


<div class="col-lg-6 offset-3">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Tedarikçi Ekle</strong>
        </div>
        <div class="card-body">
            <!-- Credit Card -->
            <div id="pay-invoice">
                <div class="card-body">
                    <form asp-action="AddSupplier" method="post" novalidate="novalidate">

                        <div class="form-group">
                            <label asp-for="SupplierName" class="control-label mb-1"></label>
                            <input asp-for="SupplierName" type="text" class="form-control" aria-required="true" aria-invalid="false" value="Tedarikçi adı">
                        </div>
                        <div class="form-group">
                            <label asp-for="Adress" class="control-label mb-1"></label>
                            <input asp-for="Adress" type="text" class="form-control" aria-required="true" aria-invalid="false" value="Adres">
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone" class="control-label mb-1"></label>
                            <input asp-for="Phone" type="text" class="form-control" aria-required="true" aria-invalid="false" value="Telefon">
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label mb-1"></label>
                            <input asp-for="Email" type="text" class="form-control" aria-required="true" aria-invalid="false" value="Telefon">
                        </div>
                        <div>
                            <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                <i class="fa fa-lock fa-lg"></i>&nbsp;
                                <span id="payment-button-amount">Tedarikçi Ekle</span>
                                <span id="payment-button-sending" style="display:none;">Ekleniyor…</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div> <!-- .card -->
</div>
