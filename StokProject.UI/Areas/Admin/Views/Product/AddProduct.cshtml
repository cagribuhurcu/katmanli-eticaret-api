@using StokProject.UI.Areas.Admin.Models;
@model AddProductDTO

<div class="col-lg-6 offset-3">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Ürün Ekle</strong>
        </div>
        <div class="card-body">
            <!-- Credit Card -->
            <div id="pay-invoice">
                <div class="card-body">
                    <form asp-action="AddProduct" method="post" novalidate="novalidate">

                        <div class="form-group">
                            <label asp-for="Product.ProductName" class="control-label mb-1"></label>
                            <input asp-for="Product.ProductName" type="text" class="form-control" aria-required="true" aria-invalid="false" placeholder="Ürün adı">
                        </div>
                        <div class="form-group">
                            <label asp-for="Product.UnitPrice" class="control-label mb-1"></label>
                            <input asp-for="Product.UnitPrice" type="text" class="form-control" placeholder="Fiyat">
                        </div>
                        <div class="form-group">
                            <label asp-for="Product.Stock" class="control-label mb-1"></label>
                            <input asp-for="Product.Stock" type="text" class="form-control" aria-required="true" aria-invalid="false" placeholder="Stok">
                        </div>
                        <div class="form-group">
                            <label asp-for="Product.ExpireDate" class="control-label mb-1"></label>
                            <input asp-for="Product.ExpireDate" type="text" class="form-control" aria-required="true" aria-invalid="false" placeholder="Son tarih">
                        </div>
                        <div class="form-group">
                            <label asp-for="Product.CategoryID">Category</label>
                            <select asp-for="Product.CategoryID" class="form-control">
                                <option value="">Select Category</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.ID">@category.CategoryName</option>
                                }
                            </select>
                            <span asp-validation-for="Product.CategoryID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Product.SupplierID">Category</label>
                            <select asp-for="Product.SupplierID" class="form-control">
                                <option value="">Select Supplier</option>
                                @foreach (var category in Model.Suppliers)
                                {
                                    <option value="@category.ID">@category.SupplierName</option>
                                }
                            </select>
                            <span asp-validation-for="Product.SupplierID" class="text-danger"></span>
                        </div>
                        <div>
                            <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                <i class="fa fa-lock fa-lg"></i>&nbsp;
                                <span id="payment-button-amount">Ürün Ekle</span>
                                <span id="payment-button-sending" style="display:none;">Ekleniyor…</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div> <!-- .card -->
</div>
