@using StokProject.UI.Areas.Admin.Models;
@model Product

<div class="col-lg-6 offset-3">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Ürün Güncelle</strong>
        </div>
        <div class="card-body">
            <!-- Credit Card -->
            <div id="pay-invoice">
                <div class="card-body">
                    <form asp-action="UpdateProduct" method="post" novalidate="novalidate">

                        <input type="hidden" asp-for="@Model.IsActive" />
                        <input type="hidden" asp-for="@Model.AddedDate" />

                        <div class="form-group">
                            <label asp-for="ProductName" class="control-label mb-1"></label>
                            <input asp-for="ProductName" type="text" class="form-control" aria-required="true" aria-invalid="false" placeholder="Ürün adı">
                        </div>
                        <div class="form-group">
                            <label asp-for="UnitPrice" class="control-label mb-1"></label>
                            <input asp-for="UnitPrice" type="text" class="form-control" placeholder="Fiyat">
                        </div>
                        <div class="form-group">
                            <label asp-for="Stock" class="control-label mb-1"></label>
                            <input asp-for="Stock" type="text" class="form-control" aria-required="true" aria-invalid="false" placeholder="Stok">
                        </div>
                        <div class="form-group">
                            <label asp-for="ExpireDate" class="control-label mb-1"></label>
                            <input asp-for="ExpireDate" type="text" class="form-control" aria-required="true" aria-invalid="false" placeholder="Son tarih">
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryID">Category</label>
                            <select asp-for="CategoryID" asp-items="@ViewBag.AktifKategoriler" class="form-control">
                                <option value="">Select Category</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="SupplierID">Category</label>
                            <select asp-for="SupplierID" asp-items="@ViewBag.AktifTedarikciler" class="form-control">
                                <option value="">Select Supplier</option>
                            </select>
                        </div>
                        <div>
                            <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                <i class="fa fa-lock fa-lg"></i>&nbsp;
                                <span id="payment-button-amount">Ürün Güncelle</span>
                                <span id="payment-button-sending" style="display:none;">Ekleniyor…</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div> <!-- .card -->
</div>
